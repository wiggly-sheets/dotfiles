{
    "global": {
        "ask_for_confirmation_before_quitting": false,
        "check_for_updates_on_startup": false,
        "show_in_menu_bar": false
    },
    "machine_specific": { "krbn-empty-machine-identifier": { "enable_multitouch_extension": true } },
    "profiles": [
        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "Left Shift + Spacebar => Backspace",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "spacebar",
                                    "modifiers": { "mandatory": ["left_shift"] }
                                },
                                "to": [
                                    {
                                        "key_code": "delete_or_backspace",
                                        "lazy": true,
                                        "repeat": true
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Change spacebar to left_shift if pressed with other keys (Post spacebar when pressed alone)",
                        "enabled": false,
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "spacebar",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to": [
                                    {
                                        "key_code": "left_shift",
                                        "lazy": true
                                    }
                                ],
                                "to_if_alone": [{ "key_code": "spacebar" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Escape → tap Escape / hold 250ms → Caps Lock",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "escape",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "parameters": { "basic.to_if_held_down_threshold_milliseconds": 250 },
                                "to_if_alone": [{ "key_code": "escape" }],
                                "to_if_held_down": [{ "key_code": "caps_lock" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Caps Lock → Hyper when held, Escape when tapped",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "caps_lock",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to": [
                                    {
                                        "key_code": "left_shift",
                                        "modifiers": ["left_command", "left_control", "left_option"]
                                    }
                                ],
                                "to_if_alone": [{ "key_code": "escape" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "akimbo cmd to F12",
                        "manipulators": [
                            {
                                "from": {
                                    "simultaneous": [
                                        { "key_code": "left_command" },
                                        { "key_code": "right_command" }
                                    ],
                                    "simultaneous_options": {
                                        "to_after_key_up": [
                                            {
                                                "key_code": "f12",
                                                "modifiers": ["fn"]
                                            }
                                        ]
                                    }
                                },
                                "to": [{ "key_code": "vk_none" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Change right_command+hjkl to arrow keys",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "h",
                                    "modifiers": {
                                        "mandatory": ["right_command"],
                                        "optional": ["any"]
                                    }
                                },
                                "to": [{ "key_code": "left_arrow" }],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "j",
                                    "modifiers": {
                                        "mandatory": ["right_command"],
                                        "optional": ["any"]
                                    }
                                },
                                "to": [{ "key_code": "down_arrow" }],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "k",
                                    "modifiers": {
                                        "mandatory": ["right_command"],
                                        "optional": ["any"]
                                    }
                                },
                                "to": [{ "key_code": "up_arrow" }],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "l",
                                    "modifiers": {
                                        "mandatory": ["right_command"],
                                        "optional": ["any"]
                                    }
                                },
                                "to": [{ "key_code": "right_arrow" }],
                                "type": "basic"
                            }
                        ]
                    }
                ]
            },
            "fn_function_keys": [
                {
                    "from": { "key_code": "f4" },
                    "to": [{ "apple_vendor_keyboard_key_code": "launchpad" }]
                }
            ],
            "name": "Default profile",
            "selected": true,
            "virtual_hid_keyboard": { "keyboard_type_v2": "ansi" }
        }
    ]
}