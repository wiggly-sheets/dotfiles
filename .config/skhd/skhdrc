# Use custom shell (skips interactive shell overhead)
.shell "/bin/dash"

# Blacklist applications (skip hotkey processing)
.blacklist [
    "VMware Fusion"
]

# Define process groups for reuse
.define terminal_apps ["wezterm", "terminal"]
.define native_apps ["wezterm", "helium", "zen", "safari", "whatsapp"]
.define browser_apps ["safari", "helium", "zen"]

# Linux-style word navigation and deletion
ctrl - backspace [
    @native_apps ~         # Terminal apps handle natively
    *            | alt - backspace  # Other apps: delete word
]

ctrl - left [
    @native_apps ~         # Terminal apps handle natively
    *            | alt - left       # Other apps: move word left
]

ctrl - right [
    @native_apps ~         # Terminal apps handle natively
    *            | alt - right      # Other apps: move word right
]

# Home/End key behavior (with shift for selection)
home [
    @native_apps ~         # Terminal apps handle natively
    *            | cmd - left       # Other apps: line start
]

shift - home [
    @native_apps ~         # Terminal apps handle natively
    *            | cmd + shift - left  # Other apps: select to line start
]

# Ctrl+Home/End for document navigation
ctrl - home [
    @native_apps ~         # Terminal apps handle natively
    *            | cmd - up         # Other apps: document start
]

ctrl - end [
    @native_apps ~         # Terminal apps handle natively
    *            | cmd - down       # Other apps: document end
]

# change window focus
alt - j : yabai -m window --focus south || yabai -m display --focus south
alt - k : yabai -m window --focus north || yabai -m display --focus north
alt - h : yabai -m window --focus west || yabai -m display --focus west
alt - l : yabai -m window --focus east || yabai -m display --focus east
alt - c : yabai -m window --focus mouse
cmd + shift - space : yabai -m window --focus next || yabai -m window --focus first
alt + shift - space : yabai -m window --focus prev || yabai -m window --focus last

# Resize windows
shift + cmd - h : yabai -m window --resize right:-100:0 2> /dev/null || yabai -m window --resize left:-50:0 2> /dev/null
shift + cmd - j : yabai -m window --resize bottom:0:100 2> /dev/null || yabai -m window --resize top:0:50 2> /dev/null
shift + cmd - k : yabai -m window --resize bottom:0:-100 2> /dev/null || yabai -m window --resize top:0:-50 2> /dev/null
shift + cmd - l : yabai -m window --resize right:100:0 2> /dev/null || yabai -m window --resize left:50:0 2> /dev/null

# window insertion points for splits
cmd + ctrl - l : yabai -m window --insert east
cmd + ctrl - h : yabai -m window --insert west
cmd + ctrl - j : yabai -m window --insert south
cmd + ctrl - k : yabai -m window --insert north

# switch current space layout
alt - s : yabai -m space --layout stack && sketchybar --trigger space_change
alt - b : yabai -m space --layout bsp && sketchybar --trigger space_change
alt - u : yabai -m space --layout float && sketchybar --trigger space_change
ctrl + alt - space : yabai -m space --layout $(yabai -m query --spaces --space | jq -r '.type' | awk '{print ($1=="bsp"?"stack":($1=="stack"?"float":"bsp"))}') && sketchybar --trigger space_change

# move space forward or backward
alt - o : sh -c 'yabai -m space --move prev || yabai -m space --move last;  sketchybar --trigger space_change && sketchybar --trigger space_windows_change'
alt - m : sh -c 'yabai -m space --move next || yabai -m space --move first; sketchybar --trigger space_change && sketchybar --trigger space_windows_change'

# move spaces to specific indices
hyper - 1 : yabai -m space --move 1 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
hyper - 2 : yabai -m space --move 2 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
hyper - 3 : yabai -m space --move 3 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
hyper - 4 : yabai -m space --move 4 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
hyper - 5 : yabai -m space --move 5 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
hyper - 6 : yabai -m space --move 6 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
hyper - 7 : yabai -m space --move 7 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
hyper - 8 : yabai -m space --move 8 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
hyper - 9 : yabai -m space --move 9 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
hyper - 0 : yabai -m space --move 10 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change

# swap spaces if on same display, else swap windows if on different displays
ctrl + alt + cmd - 1 : yabai -m space --swap 1 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
ctrl + alt + cmd - 2 : yabai -m space --swap 2 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
ctrl + alt + cmd - 3 : yabai -m space --swap 3 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
ctrl + alt + cmd - 4 : yabai -m space --swap 4 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
ctrl + alt + cmd - 5 : yabai -m space --swap 5 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
ctrl + alt + cmd - 6 : yabai -m space --swap 6 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
ctrl + alt + cmd - 7 : yabai -m space --swap 7 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
ctrl + alt + cmd - 8 : yabai -m space --swap 8 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
ctrl + alt + cmd - 9 : yabai -m space --swap 9 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
ctrl + alt + cmd - 0 : yabai -m space --swap 10 && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
ctrl + alt + cmd - r : yabai -m space --swap recent && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
ctrl + alt + cmd - p : yabai -m space --swap prev && sketchybar --trigger space_change && sketchybar --trigger space_windows_change || yabai -m space --swap last && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
ctrl + alt + cmd - n : yabai -m space --swap next && sketchybar --trigger space_change && sketchybar --trigger space_windows_change || yabai -m space --swap first && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
ctrl + alt + cmd - e : yabai -m space --swap last && sketchybar --trigger space_change && sketchybar --trigger space_windows_change
ctrl + alt + cmd - f : yabai -m space --swap first && sketchybar --trigger space_change && sketchybar --trigger space_windows_change

# rotate layout clockwise
shift + alt - c : yabai -m space --rotate 90

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# toggle window float
shift + alt - u : yabai -m window --toggle float --grid 5:5:1:1:3:3

# toggle sticky window (window appears on all spaces)
shift + alt - s : yabai -m window --toggle sticky

# zoom window to take up whole space
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# move window to native full-screen display
shift + alt - z : yabai -m window --toggle native-fullscreen

# zoom window to take up size of parent node
shift + alt - i : yabai -m window --toggle zoom-parent

# make window pip & pin to all spaces
shift + alt - o : yabai -m window --toggle pip && yabai -m window --toggle sticky

# balance tree of windows (resize to occupy same area)
shift + alt - b : yabai -m space --balance && yabai -m space --equalize

# swap windows
shift + alt - j : yabai -m window --swap south || yabai -m window --display south
shift + alt - k : yabai -m window --swap north || yabai -m window --display north
shift + alt - h : yabai -m window --swap west || yabai -m window --display west
shift + alt - l : yabai -m window --swap east || yabai -m window --display east
shift + cmd + alt - n : yabai -m window --swap next || yabai -m window swap first
shift + cmd + alt - p : yabai -m window --swap prev || yabai -m window swap last

# move window and split
ctrl + alt - j : yabai -m window --warp south || yabai -m window --display south
ctrl + alt - k : yabai -m window --warp north || yabai -m window --display north
ctrl + alt - h : yabai -m window --warp west || yabai -m window --display west
ctrl + alt - l : yabai -m window --warp east || yabai -m window --display east
ctrl + alt - n : yabai -m window --warp next || yabai -m window --warp first
ctrl + alt - p : yabai -m window --warp prev || yabai -m window --warp last
ctrl + alt - f : yabai -m window --warp first
ctrl + alt - e : yabai -m window --warp last
ctrl + alt - r : yabai -m window --warp recent

# toggle split type for current window
rcmd - s : yabai -m window --toggle split

# set split for current window to vertical
ctrl + cmd - v : \
  SPLIT_TYPE="$(yabai -m query --windows --window | jq -r '.["split-type"]')" && \
  if [ "$SPLIT_TYPE" = "horizontal" ]; then \
    yabai -m window --toggle split; \
  fi

  # set split for current window to horizontal
ctrl + cmd - g : \
  SPLIT_TYPE="$(yabai -m query --windows --window | jq -r '.["split-type"]')" && \
  if [ "$SPLIT_TYPE" = "vertical" ]; then \
    yabai -m window --toggle split; \
  fi

# create & cycle through stacked windows
ctrl - s : yabai -m window --insert stack
ctrl - h : yabai -m window --stack west
ctrl - j : yabai -m window --stack south
ctrl - k : yabai -m window --stack north
ctrl - l : yabai -m window --stack east
ctrl - n : yabai -m window --focus stack.next || yabai -m window --focus stack.first
ctrl - p : yabai -m window --focus stack.prev || yabai -m window --focus stack.last
ctrl - f : yabai -m window --focus stack.first
ctrl - e : yabai -m window --focus stack.last
ctrl - r : yabai -m window --focus stack.recent

# unstack a window
ctrl - u : yabai -m window --toggle float && yabai -m window --toggle float

# focus space
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9
alt - 0 : yabai -m space --focus 10
alt - p : yabai -m space --focus prev || yabai -m space --focus last
alt - n : yabai -m space --focus next || yabai -m space --focus first
alt - f : yabai -m space --focus first
alt - e : yabai -m space --focus last
alt - r : yabai -m space --focus recent

# Focus next space of current display, else wrap to the first space of the current display if the current space is the last space of its display
alt - g : ~/dotfiles/.config/yabai/scripts/display_space_next.sh

# Focus previous space of current display, else wrap to the last space of the current display if the current space is the first space of its display
alt - d : ~/dotfiles/.config/yabai/scripts/display_space_prev.sh

# create space
alt - a : yabai -m space --create

# create space & follow focus
alt - t : ~/dotfiles/.config/yabai/scripts/new_space_focus.sh

# destroy space, move destroyed space windows to previous space, & focus previous space
alt - w : ~/dotfiles/.config/yabai/scripts/destroy_space.sh

# move window to space
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;
shift + alt - 7 : yabai -m window --space 7;
shift + alt - 8 : yabai -m window --space 8;
shift + alt - 9 : yabai -m window --space 9;
shift + alt - 0 : yabai -m window --space 10;
shift + alt - f : yabai -m window --space first;
shift + alt - e : yabai -m window --space last;
shift + alt - n : yabai -m window --space next || yabai -m window --space first;
shift + alt - p : yabai -m window --space prev || yabai -m window --space last;
shift + alt - r : yabai -m window --space recent;

# send window to space & follow focus
shift + cmd - r : yabai -m window --space recent --focus
shift + cmd - f : yabai -m window --space first --focus
shift + cmd - e : yabai -m window --space last --focus
shift + cmd - p : yabai -m window --space prev -- focus|| yabai -m window --space last --focus
shift + cmd - n : yabai -m window --space next --focus || yabai -m window --space first -- focus
shift + cmd - 1 : yabai -m window --space 1 --focus
shift + cmd - 2 : yabai -m window --space 2 --focus
shift + cmd - 3 : yabai -m window --space 3 --focus
shift + cmd - 4 : yabai -m window --space 4 --focus
shift + cmd - 5 : yabai -m window --space 5 --focus
shift + cmd - 6 : yabai -m window --space 6 --focus
shift + cmd - 7 : yabai -m window --space 7 --focus
shift + cmd - 8 : yabai -m window --space 8 --focus
shift + cmd - 9 : yabai -m window --space 9 --focus
shift + cmd - 0 : yabai -m window --space 10 --focus

# make new space at last index & send window to it
shift + alt - a :  ~/dotfiles/.config/yabai/scripts/new_space_window.sh

# make new space at last index, send window to it, & follow focus
shift + cmd - a : ~/dotfiles/.config/yabai/scripts/new_space_follow_focus.sh

# make new space 1 index after current space
ctrl - a : ~/dotfiles/.config/yabai/scripts/new_space_close.sh

# make new space 1 index after current space & follow focus
ctrl - t : ~/dotfiles/.config/yabai/scripts/new_space_close_follow.sh

# focus display
rcmd - r : yabai -m display --focus recent
rcmd - p : yabai -m display --focus prev || -- yabai -m display --focus last
rcmd - n : yabai -m display --focus next || yabai -m display --focus first
rcmd - l : yabai -m display --focus east
rcmd - h : yabai -m display --focus west
rcmd - j : yabai -m display --focus south
rcmd - k : yabai -m display --focus north
rcmd - 1 : yabai -m display --focus 1
rcmd - 2 : yabai -m display --focus 2
rcmd - 3 : yabai -m display --focus 3

# send window to display and follow focus
meh - r : yabai -m window --display recent --focus;
meh - p : yabai -m window --display prev --focus;
meh - n : yabai -m window --display next --focus;
meh - f : yabai -m window --display first --focus;
meh - e : yabai -m window --display last --focus;
meh - 1 : yabai -m window --display 1 --focus;
meh - 2 : yabai -m window --display 2 --focus;
meh - 3 : yabai -m window --display 3 --focus;

# send space to display & follow focus
ctrl + cmd - n : sh -c 'yabai -m space --display next --focus || yabai -m space --display first --focus;  sketchybar --trigger space_change && sketchybar --trigger space_windows_change'
ctrl + cmd - p : sh -c 'yabai -m space --display prev --focus || yabai -m space --display last --focus;   sketchybar --trigger space_change && sketchybar --trigger space_windows_change'
ctrl + cmd - r : sh -c 'yabai -m space --display recent --focus; sketchybar --trigger space_change && sketchybar --trigger space_windows_change'
ctrl + cmd - f : sh -c 'yabai -m space --display first --focus; sketchybar --trigger space_change && sketchybar --trigger space_windows_change'
ctrl + cmd - e : sh -c 'yabai -m space --display last --focus; sketchybar --trigger space_change && sketchybar --trigger space_windows_change'
ctrl + cmd - 1 : sh -c 'yabai -m space --display 1 --focus; sketchybar --trigger space_change && sketchybar --trigger space_windows_change'
ctrl + cmd - 2 : sh -c 'yabai -m space --display 2 --focus; sketchybar --trigger space_change && sketchybar --trigger space_windows_change'
ctrl + cmd - 3 : sh -c 'yabai -m space --display 3 --focus; sketchybar --trigger space_change && sketchybar --trigger space_windows_change'

# notes scratchpad
meh - s : yabai -m window --toggle scratchpad || open -a TextEdit

# show all scratchpad windows if inaccessible due to yabai restart or crash
meh - a : yabai -m window --scratchpad recover

# restart yabai/borders
shift + cmd - y : yabai --restart-service

# restart sketchybar
shift + cmd - s : sketchybar --reload

# toggle sketchybar visbility
shift + cmd - b : sketchybar --bar hidden=toggle

# borders visibility on
shift + cmd - x : borders active_color=0xFFFFFFFF

# borders visiblity off
shift + cmd - z : borders active_color=0x00000000

# toggle menu bar padding, window gaps, and padding for internal or external display, and adjust sketchybar height for external display
shift + cmd - m : sh -c 'p=$(yabai -m config external_bar); if [ "$p" = "all:0:0" ]; then yabai -m config external_bar main:9:0 && yabai -m config window_gap 10 && yabai -m config top_padding 0 && yabai -m config bottom_padding 10 && yabai -m config left_padding 10 && yabai -m config right_padding 10 && sketchybar --bar y_offset=3; else yabai -m config external_bar all:0:0 && yabai -m config window_gap 5 && yabai -m config top_padding 1 && yabai -m config bottom_padding 1 && yabai -m config left_padding 1 && yabai -m config right_padding 1 && sketchybar --bar y_offset=0; fi'
# toggle native menu bar visbility
shift + cmd - v : sh -c 'o=$(yabai -m config menubar_opacity); awk "BEGIN{exit !($o>=1)}" && { yabai -m config menubar_opacity 0.0; sketchybar --bar hidden=false; } || { yabai -m config menubar_opacity 1.0; sketchybar --bar hidden=true; }'
