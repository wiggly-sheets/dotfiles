# Use custom shell (skips interactive shell overhead)
.shell "/bin/dash"

# Blacklist applications (skip hotkey processing)
.blacklist [
    "VMware Fusion"
]

# Define process groups for reuse (New in skhd.zig!)
.define terminal_apps ["wezterm", "terminal"]
.define native_apps ["wezterm", "helium", "zen", "safari", "whatsapp"]
.define browser_apps ["safari", "helium", "zen"]

# Linux-style word navigation and deletion
ctrl - backspace [
    @native_apps ~         # Terminal apps handle natively
    *            | alt - backspace  # Other apps: delete word
]

ctrl - left [
    @native_apps ~         # Terminal apps handle natively
    *            | alt - left       # Other apps: move word left
]

ctrl - right [
    @native_apps ~         # Terminal apps handle natively
    *            | alt - right      # Other apps: move word right
]

# Home/End key behavior (with shift for selection)
home [
    @native_apps ~         # Terminal apps handle natively
    *            | cmd - left       # Other apps: line start
]

shift - home [
    @native_apps ~         # Terminal apps handle natively
    *            | cmd + shift - left  # Other apps: select to line start
]

# Ctrl+Home/End for document navigation
ctrl - home [
    @native_apps ~         # Terminal apps handle natively
    *            | cmd - up         # Other apps: document start
]

ctrl - end [
    @native_apps ~         # Terminal apps handle natively
    *            | cmd - down       # Other apps: document end
]

# change window focus
alt - j : yabai -m window --focus south || yabai -m display --focus south
alt - k : yabai -m window --focus north || yabai -m display --focus north
alt - h : yabai -m window --focus west || yabai -m display --focus west
alt - l : yabai -m window --focus east || yabai -m display --focus east
alt - c : yabai -m window --focus mouse 

# Resize windows
shift + cmd - h : yabai -m window --resize right:-50:0 2> /dev/null || yabai -m window --resize left:-20:0 2> /dev/null
shift + cmd - j : yabai -m window --resize bottom:0:50 2> /dev/null || yabai -m window --resize top:0:20 2> /dev/null
shift + cmd - k : yabai -m window --resize bottom:0:-50 2> /dev/null || yabai -m window --resize top:0:-20 2> /dev/null
shift + cmd - l : yabai -m window --resize right:50:0 2> /dev/null || yabai -m window --resize left:20:0 2> /dev/null

# switch current space layout
alt - s : yabai -m space --layout stack
alt - b : yabai -m space --layout bsp
alt - u : yabai -m space --layout float

# move spaces
alt - o : sh -c 'yabai -m space --move prev || yabai -m space --move last;  sketchybar --trigger space_change && sketchybar --trigger space_windows_change'
alt - m : sh -c 'yabai -m space --move next || yabai -m space --move first; sketchybar --trigger space_change && sketchybar --trigger space_windows_change'

# rotate layout clockwise
shift + alt - c : yabai -m space --rotate 90

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# toggle window float
shift + alt - u : yabai -m window --toggle float --grid 5:5:1:1:3:3

# toggle sticky window (window appears on all spaces)
shift + alt - s : yabai -m window --toggle sticky

# maximize window
shift + alt - m : yabai -m window --toggle zoom-fullscreen
shift + alt - z : yabai -m window --toggle native-fullscreen
shift + alt - o : yabai -m window --toggle zoom-parent

# balance tree of windows (resize to occupy same area)
shift + alt - b : yabai -m space --balance

# swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east
ctrl + alt - n : yabai -m window --warp next
ctrl + alt - p : yabai -m window --warp prev
ctrl + alt - f : yabai -m window --warp first
ctrl + alt - e : yabai -m window --warp last
ctrl + alt - r : yabai -m window --warp recent

# toggle split type
rcmd - s : yabai -m window --toggle split

# set split for current window to vertical
ctrl + cmd - v : \
  if [[ "$(yabai -m query --windows --window | jq -r '.\"split-type\"')" == "horizontal" ]]; then \
    yabai -m window --toggle split; \
  fi

# set split for current window to horizontal
ctrl + cmd - h : \
  if [[ "$(yabai -m query --windows --window | jq -r '.\"split-type\"')" == "vertical" ]]; then \
    yabai -m window --toggle split; \
  fi

# create & cycle through stacked windows
ctrl - s : yabai -m window --insert stack
ctrl - h : yabai -m window --stack west
ctrl - j : yabai -m window --stack south
ctrl - k : yabai -m window --stack north
ctrl - l : yabai -m window --stack east
ctrl - n : yabai -m window --focus stack.next || yabai -m window --focus stack.first
ctrl - p : yabai -m window --focus stack.prev || yabai -m window --focus stack.last
ctrl - f : yabai -m window --focus stack.first
ctrl - e : yabai -m window --focus stack.last
ctrl - r : yabai -m window --focus stack.recent

# unstack a window
ctrl - u : yabai -m window --toggle float && yabai -m window --toggle float 

# focus space 
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9
alt - 0 : yabai -m space --focus 10
alt - p : yabai -m space --focus prev || yabai -m space --focus last
alt - n : yabai -m space --focus next || yabai -m space --focus first
alt - f : yabai -m space --focus first
alt - e : yabai -m space --focus last
alt - r : yabai -m space --focus recent

# create & destroy desktop
alt - a : yabai -m space --create
alt - w : yabai -m space --destroy

# create desktop & follow focus
alt - t : yabai -m space --create; yabai -m space --focus last

# move window to space
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;
shift + alt - 7 : yabai -m window --space 7;
shift + alt - 8 : yabai -m window --space 8;
shift + alt - 9 : yabai -m window --space 9;
shift + alt - 0 : yabai -m window --space 10;
shift + alt - f : yabai -m window --space first;
shift + alt - e : yabai -m window --space last;
shift + alt - n : yabai -m window --space next || yabai -m window --space first;
shift + alt - p : yabai -m window --space prev || yabai -m window --space last;
shift + alt - r : yabai -m window --space recent;

# send window to space & follow focus
shift + cmd - r : yabai -m window --space recent && yabai -m space --focus recent
shift + cmd - f : yabai -m window --space first && yabai -m space --focus first
shift + cmd - e : yabai -m window --space last && yabai -m space --focus last
shift + cmd - p : yabai -m window --space prev \
  && yabai -m space --focus prev \
  || { yabai -m window --space last; yabai -m space --focus last; }
shift + cmd - n : yabai -m window --space next \
  && yabai -m space --focus next \
  || { yabai -m window --space first; yabai -m space --focus first; }
shift + cmd - 1 : yabai -m window --space  1 && yabai -m space --focus 1
shift + cmd - 2 : yabai -m window --space  2 && yabai -m space --focus 2
shift + cmd - 3 : yabai -m window --space  3 && yabai -m space --focus 3
shift + cmd - 4 : yabai -m window --space  4 && yabai -m space --focus 4
shift + cmd - 5 : yabai -m window --space  5 && yabai -m space --focus 5
shift + cmd - 6 : yabai -m window --space  6 && yabai -m space --focus 6
shift + cmd - 7 : yabai -m window --space  7 && yabai -m space --focus 7
shift + cmd - 8 : yabai -m window --space  8 && yabai -m space --focus 8
shift + cmd - 9 : yabai -m window --space  9 && yabai -m space --focus 9
shift + cmd - 0 : yabai -m window --space 10 && yabai -m space --focus 10

# make new space, send window to it, & follow focus
shift + cmd - a : yabai -m space --create && yabai -m window --space last && yabai -m space --focus last;

# make new space & send window to it 
shift + alt - a : yabai -m space --create && yabai -m window --space last;

# focus display
rcmd - r : yabai -m display --focus recent
rcmd - p : yabai -m display --focus prev || -- yabai -m display --focus last
rcmd - n : yabai -m display --focus next || yabai -m display --focus first
rcmd - 1 : yabai -m display --focus 1
rcmd - 2 : yabai -m display --focus 2
rcmd - 3 : yabai -m display --focus 3
rcmd - l : yabai -m display --focus east
rcmd - h : yabai -m display --focus west
rcmd - j : yabai -m display --focus south
rcmd - k : yabai -m display --focus north

# send window to display and follow focus
meh - r : yabai -m window --display recent && yabai -m display --focus recent;
meh - p : yabai -m window --display prev && yabai -m display --focus prev;
meh - n : yabai -m window --display next && yabai -m display --focus next;
meh - 1 : yabai -m window --display 1 && yabai -m display --focus 1;
meh - 2 : yabai -m window --display 2 && yabai -m display --focus 2;
meh - 3 : yabai -m window --display 3 && yabai -m display --focus 3;
meh - f : yabai -m window --display first && yabai -m display --focus first;
meh - e : yabai -m window --display last && yabai -m display --focus last;

# send space to display
ctrl + cmd - n : sh -c 'yabai -m space --display next  || yabai -m space --display first;  sketchybar --trigger space_change && sketchybar --trigger space_windows_change'
ctrl + cmd - p : sh -c 'yabai -m space --display prev  || yabai -m space --display last;   sketchybar --trigger space_change && sketchybar --trigger space_windows_change'
ctrl + cmd - 1 : sh -c 'yabai -m space --display 1;     sketchybar --trigger space_change && sketchybar --trigger space_windows_change'
ctrl + cmd - 2 : sh -c 'yabai -m space --display 2;     sketchybar --trigger space_change && sketchybar --trigger space_windows_change'
ctrl + cmd - 3 : sh -c 'yabai -m space --display 3;     sketchybar --trigger space_change && sketchybar --trigger space_windows_change'
ctrl + cmd - r : sh -c 'yabai -m space --display recent; sketchybar --trigger space_change && sketchybar --trigger space_windows_change'
ctrl + cmd - f : sh -c 'yabai -m space --display first;  sketchybar --trigger space_change && sketchybar --trigger space_windows_change'
ctrl + cmd - e : sh -c 'yabai -m space --display last;   sketchybar --trigger space_change && sketchybar --trigger space_windows_change'

# notes scratchpad
meh - s : yabai -m window --toggle scratchpad || open -a TextEdit

# show all scratchpad windows if inaccessible due to yabai restart or crash
meh - a : yabai -m window --scratchpad recover

# restart yabai
shift + cmd - y : yabai --restart-service

# restart sketchybar
shift + cmd - s : sketchybar --reload

# menu bar padding, window gaps, and padding for internal or external display
shift + cmd - m : sh -c 'p=$(yabai -m config external_bar); if [ "$p" = "all:0:0" ]; then yabai -m config external_bar main:9:0 && yabai -m config window_gap 10 && yabai -m config top_padding 0 && yabai -m config bottom_padding 10 && yabai -m config left_padding 10 && yabai -m config right_padding 10; else yabai -m config external_bar all:0:0 && yabai -m config window_gap 5 && yabai -m config top_padding 1 && yabai -m config bottom_padding 1 && yabai -m config left_padding 1 && yabai -m config right_padding 1; fi'

# native menu bar visbility
shift + cmd - v : sh -c 'o=$(yabai -m config menubar_opacity); [ "${o%.*}" = "1" ] && yabai -m config menubar_opacity 0.0 || yabai -m config menubar_opacity 1.0'